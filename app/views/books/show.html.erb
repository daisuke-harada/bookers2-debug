
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @book_find.user %>
		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book_find.user) do %>
						<%= attachment_image_tag(@book_find.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book_find.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book_find.title, book_path(@book_find) %></td>
					<td><%= @book_find.body %></td>

          <%= render 'layouts/favorite.comment', book: @book_find %>

				  <% if @book_find.user == current_user %>
					  <td><%= link_to "Edit",edit_book_path(@book_find), class: "btn-sm btn-success" %></td>
					  <td><%= link_to "Destroy",book_path(@book_find), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book" %></td>
					 <% else %>
					   <td></td>
					 <% end %>
				</tr>
		</table>

		<%= form_for [@book_find, @book_comment] do |f| %>
    <div class="row">
        <div class="col-sm-12">
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
        </div>
    </div>
    <% end %>

    <h2>Book comments</h2>

    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>comment</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @book_comments.each do |book_comment| %>
          <tr>
            <td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
            <td>
              <%= book_comment.comment %>
            </td>
            <td>
              <%= book_comment.user.name %>
            </td>
            <% if book_comment.user == current_user %>
              <td>
                <%= link_to "Destroy", book_book_comment_path(book_comment), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %>
              </td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

	</div>
</div>

