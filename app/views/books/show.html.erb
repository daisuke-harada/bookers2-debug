
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @book_find.user %>
		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book_find.user) do %>
						<%= attachment_image_tag(@book_find.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book_find.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book_find.title, book_path(@book_find) %></td>
					<td><%= @book_find.body %></td>
					<td><%= render 'favorites/favorite', book: @book_find %></td>
           <td>コメント数<%= @book_find.book_comments.count %></td>
				  <% if @book_find.user == current_user %>
					  <td><%= link_to "Edit",edit_book_path(@book_find), class: "btn-sm btn-success" %></td>
					  <td><%= link_to "Destroy",book_path(@book_find), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book" %></td>
					 <% else %>
					   <td></td>
					 <% end %>
				</tr>
		</table>

      <div class="row">
        <div class="col-sm-12">
          <dev id="comments_area">
            <%= render partial: 'book_comments/form', locals: {book_find: @book_find, book_comment: @book_comment } %>
            <%= render partial: 'book_comments/index', locals: { book_comments: @book_comments} %>
          </dev>
        </div>
      </div>
    </div>
  </div>

